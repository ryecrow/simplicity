body, a, p, ul, li, h1, h2, h3, h4, h5, h6
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, "Source Han Sans SC", "PingFang SC", "Microsoft YaHei", sans-serif
  margin: 0
  padding: 0

a
  color: #333333
  text-decoration: none

p
  color: #2f2f2f
  font-size: 15px
  font-weight: 400
  line-height: 30px

span
  color: #333333
  font-size: 14px

img
  width: 100%

blockquote
  border-left: 0.25em solid #dfe2e5
  padding: 20px
  color: #b4b4b4
  background-color: #f7f7f7
  margin: 0 0 6px 0

@media (prefers-color-scheme dark)
  body
    background-color: #1e1e1e
    color: #dedede

  a, span
    color: #eee

  p
    color: #dedede